{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": [ 
      "eslint:recommended", 
      "plugin:react/recommended" 
    ],
    "parserOptions": {
        "sourceType": "module"
    },
    "globals": {
        "describe": false,
        "it": false,
        "beforeEach": false,
        "afterEach": false,
        "before": false,
        "after": false
    },
    "plugins": [
      "react"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": "off"
    }
}
